        // In production: verify payment on backend and activate subscription
      },
      prefill: {
        name: '',
        email: '',
        contact: '',
      },
      notes: {
        plan: plan.name,
        billing_cycle: billingCycle,
      },
      theme: {
        color: '#2563eb',
      },
      modal: {
        ondismiss: function () {
          setLoading(false);
        },
      },
    };

    try {
      if (!window.Razorpay) {
        alert('Payment gateway is loading. Please try again in a moment.');
        setLoading(false);
        return;
      }
      const razorpay = new window.Razorpay(options);
      razorpay.open();
